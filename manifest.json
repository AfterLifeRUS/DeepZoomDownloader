{
  "manifest_version": 3,
  "name": "DeepZoom Downloader",
  "version": "1.2",
  "description": "Обнаруживает Deep Zoom изображения на активной вкладке и позволяет их скачивать.",
  "permissions": [
    "webRequest",
    "storage",
    "downloads",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Сканер Deep Zoom"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}